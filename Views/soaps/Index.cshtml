@model MvcSoaps.Models.SoapTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Soaps" asp-action="Index" method="get">
    <p>

        <select asp-for="SoapType" asp-items="Model.Type">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Soaps)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
